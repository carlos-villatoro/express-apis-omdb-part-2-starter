<h1><%=  movie.Title %></h1>
<p><%=  movie.Year %></p>
<h4><%=  movie.Rated %></h4>
<h6><%=  movie.Genre %></h6>
<p><%=  movie.Director %></p>

<img src="<%= movie.Poster %>" />

<!-- form to create new fave -->
<form action="/faves" method="POST">
    <input hidden value="<%= movie.Title %>" name="title">
    <input hidden value="<%= movie.imdbID %>" name="imdbid">
    <button type="submit">Add to Faves</button>
</form>